<templates xml:space="preserve">
    <t t-name="baloto.BalotoAnalisys">
        <h1 class="mb-4"><t t-esc="props.option"/></h1>
        <div class="mb-4">
            <select class="form-select" aria-label="Select an analysis" t-on-change="onChangeAnslisys">
                <option>Select an option</option>

                <!-- Sección Baloto -->
                <optgroup label="Baloto">
                    <option value="frequency-Baloto" data-option="Baloto">
                        Appearances by number, Baloto
                    </option>
                    <option value="frequency-Baloto116" data-option="Baloto">
                        Appearances by number, Baloto 1-16
                    </option>
                    <option value="pair-Baloto" data-option="Baloto">
                        Appearances by number pair, Baloto
                    </option>
                </optgroup>

                <!-- Sección Revancha -->
                <optgroup label="Revancha">
                    <option value="frequency-Revancha" data-option="Revancha">
                        Appearances by number, Revancha
                    </option>
                    <option value="frequency-Revancha116" data-option="Revancha">
                        Appearances by number, Revancha 1-16
                    </option>
                    <option value="pair-Revancha" data-option="Revancha">
                        Appearances by number pair, Revancha
                    </option>
                </optgroup>

                <!-- Sección MiLoto -->
                <optgroup label="MiLoto">
                    <option value="frequency-MiLoto" data-option="MiLoto">
                        Appearances by number, MiLoto
                    </option>
                    <option value="pair-MiLoto" data-option="MiLoto">
                        Appearances by pair, MiLoto
                    </option>
                </optgroup>

            </select>
        </div>
    </t>
</templates>