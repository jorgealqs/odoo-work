<odoo>
    <template id="report_hr_cv">
        <t t-call="web.external_layout">
            <div class="page">
                <div class="oe_structure">
                    <h1 style="text-align: center;">
                        <t t-esc="doc.name"/>
                    </h1>
                    <img t-if="doc.photo" t-att-src="'data:image/png;base64,%s' % doc.photo.decode('utf-8')" style="max-width: 150px;"/>
                    <p><strong>Título:</strong> <t t-esc="doc.job_title"/></p>
                    <p><strong>Educación:</strong> <t t-esc="doc.education"/></p>
                    <p><strong>Experiencia:</strong> <t t-esc="doc.experience"/></p>
                    <p><strong>Habilidades:</strong> <t t-esc="doc.skills"/></p>
                    <p><strong>Idiomas:</strong> <t t-esc="doc.languages"/></p>
                </div>
            </div>
        </t>
    </template>

    <report
        id="report_hr_cv_pdf"
        model="hr.cv"
        report_type="qweb-pdf"
        name="resume_cv.report_hr_cv"
        file="resume_cv.report_hr_cv"
        string="Hoja de Vida PDF"/>
</odoo>