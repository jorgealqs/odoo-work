<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="football_league_search" model="ir.ui.view">
        <field name="name">football.league Search</field>
        <field name="model">football.league</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="type"/>
                <!-- Default group by country -->
                <group expand="1" string="Group By">
                    <filter string="Country" name="group_country" context="{'group_by':'country_id'}"/>
                </group>
                <!-- Default filter to show only active sessions -->
                <filter name="filter_follow"
                    domain="[('follow', '=', True)]"
                    string="Follow"/>
            </search>
        </field>
    </record>

    <record id="football_league_form" model="ir.ui.view">
        <field name="name">football.league Form</field>
        <field name="model">football.league</field>
        <field name="arch" type="xml">
            <form string="League">
                <sheet>
                    <div class="oe_title">
                        <group>
                            <group>
                                <div class="oe_edit_only">
                                    <label for="country_id"/>
                                </div>
                                <h1 class="mb32">
                                    <field name="country_id"/>
                                </h1>
                            </group>
                            <group>
                                <div class="oe_edit_only">
                                    <label for="name"/>
                                </div>
                                <h1 class="mb32">
                                    <field name="name" class="mb16" string="League"/>
                                </h1>
                            </group>
                        </group>
                    </div>
                    <notebook>
                        <page string="Information">
                            <group>
                                <group>
                                    <field name="id_league"/>
                                    <field name="type"/>
                                    <field name="logo"/>
                                    <field name="session_id"/>
                                </group>
                                <group>
                                    <field name="start"/>
                                    <field name="end"/>
                                    <field name="follow"/>
                                </group>
                            </group>
                        </page>
                        <page string="Teams">
                            <group>
                                <field name="team_ids" string="">
                                    <tree>
                                        <field name="name"/>
                                        <field name="founded"/>
                                        <field name="logo" widget="image_url" options="{'size': [50, 50]}" string="Logo"/>
                                        <field name="venue_id" string="Stadium"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Standings">
                            <div class="o_form_label">
                                <div class="jumbotron text-center py-4">
                                    <p class="lead">Up-to-date standings for the current league season.</p>
                                </div>
                            </div>
                            <group>
                                <field name="standing_ids" string="">
                                    <tree decoration-success="rank == 1" decoration-bf="rank == 1">
                                        <field name="team_id" />
                                        <field name="rank" />
                                        <field name="points" />
                                        <field name="played" />
                                        <field name="win" />
                                        <field name="draw" />
                                        <field name="lose" />
                                        <field name="scored" />
                                        <field name="conceded" />
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="football_league_tree" model="ir.ui.view">
        <field name="name">football.league Tree</field>
        <field name="model">football.league</field>
        <field name="arch" type="xml">
            <tree limit="30">
                <field name="name"/>
                <field name="logo" widget="image_url" options="{'size': [50, 50]}" string="Logo"/>
                <field name="season_year" optional="true"/>
                <field name="country_id" optional="true"/>
                <field name="follow" optional="true"/>
                <field name="start"/>
                <field name="end"/>
            </tree>
        </field>
    </record>

    <record id="football_league_action" model="ir.actions.act_window">
        <field name="name">Leagues</field>
        <field name="res_model">football.league</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="football_league_tree"/>
        <field name="context">{'search_default_group_country': 1, 'search_default_filter_follow':1}</field>
    </record>

</odoo>