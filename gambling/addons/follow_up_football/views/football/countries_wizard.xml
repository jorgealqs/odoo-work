<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_football_country_wizard" model="ir.ui.view">
        <field name="name">football.country.wizard.form</field>
        <field name="model">football.country.wizard</field>
        <field name="arch" type="xml">
            <form string="Countries">
                <sheet>
                    <div class="oe_title">
                        <h1 class="text-center mb-4">
                            <span class="fa fa-globe"></span> Sync Football Countries
                        </h1>
                    </div>
                    <div class="alert alert-info" role="alert">
                        Download countries data from the Football-API. Click "Sync" to start the process.
                    </div>
                    <footer>
                        <button string="Sync" type="object" name="action_sync_countries" class="btn btn-success" icon="fa-download"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_football_country_wizard" model="ir.actions.act_window">
        <field name="name">Countries</field>
        <field name="res_model">football.country.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_football_country_wizard"/>
        <field name="target">new</field>
    </record>

</odoo>