<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- football.standing tree view -->
    <record id="football_standing_tree" model="ir.ui.view">
        <field name="name">football.standing Tree</field>
        <field name="model">football.standing</field>
        <field name="arch" type="xml">
            <tree decoration-success="rank == 1" decoration-bf="rank == 1">
                <!-- Add your fields here -->
                <field name="team_id" />
                <field name="rank" />
                <field name="points" />
                <field name="played" />
                <field name="win" />
                <field name="draw" />
                <field name="lose" />
                <field name="scored" />
                <field name="conceded" />
            </tree>
        </field>
    </record>

</odoo>
