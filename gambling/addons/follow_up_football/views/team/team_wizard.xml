<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="football_team_wizard_form" model="ir.ui.view">
        <field name="name">football.team.wizard Form</field>
        <field name="model">football.team.wizard</field>
        <field name="arch" type="xml">
            <form string="Teams">
                <sheet>
                    <div class="oe_title">
                        <h1 class="text-center mb-4">
                            <span class="fa fa-globe"></span> Sync Football Teams
                        </h1>
                    </div>
                    <div class="alert alert-info" role="alert">
                        Download teams data from the Football-API. Click "Sync" to start the process.
                    </div>
                    <footer>
                        <button string="Sync" type="object" name="action_sync_teams" class="btn btn-success" icon="fa-download"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- football.team.wizard action window -->
    <record id="action_football_team_wizard" model="ir.actions.act_window">
        <field name="name">Teams</field>
        <field name="res_model">football.team.wizard</field>
        <field name="view_mode">form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="target">new</field>
        <field name="view_id" ref="football_team_wizard_form"/>
    </record>
</odoo>