<?xml version="1.0" encoding="UTF-8"?>

<template xml:space="preserve">
    <t t-name="config.apiFootball">
        <div class="o_action">
            <Layout display="{
                'top-right': false,
                'top-left': false,
                'bottom-right': false,
                'bottom-left': false,
            }">
                <!-- Main Container -->
                <div class="container mt-4 p-4" style="background-color: #f8f9fa; border-radius: 15px; box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);">

                    <!-- Welcome Message -->
                    <div class="alert alert-primary text-center mb-5 p-4" role="alert" style="border-radius: 12px; font-family: 'Poppins', sans-serif; box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);">
                        <h4 class="alert-heading mb-3" style="font-weight: 600;">¡Bienvenido a los partidos de fútbol de hoy!</h4>
                        <p>Consulta los partidos de fútbol de hoy. Desplázate hacia abajo para ver todos los encuentros con los equipos locales y visitantes.</p>
                        <hr />
                        <p class="mb-0">¡Comencemos! ¡Qué gane el mejor equipo!</p>
                    </div>

                    <!-- Matches Accordion Section -->
                    <div class="accordion" id="accordionMatches">
                        <t t-set="isFirst" t-value="0"/>
                        <t t-foreach="state.matches" t-as="match" t-key="match.id">
                            <t t-set="isFirst" t-value="isFirst + 1"/>
                            <div class="accordion-item">
                                <h2 class="accordion-header" t-att-id="'heading_' + match.fixture_id">
                                    <button
                                        t-att-data-fixture-id="match.fixture_id"
                                        t-att-data-home-id="match.home_team_id"
                                        t-att-data-round-id="match.round_id"
                                        t-att-data-league-id="match.league_id"
                                        t-att-data-away-id="match.away_team_id"
                                        class="accordion-button collapsed"
                                        type="button"
                                        data-bs-toggle="collapse"
                                        t-att-data-bs-target="'#collapse_' + match.fixture_id"
                                        aria-expanded="false"
                                        t-att-aria-controls="'collapse_' + match.fixture_id"
                                        t-on-click="handleCardClick"
                                        style="font-family: 'Poppins', sans-serif; font-size: 16px;"
                                    >
                                        <strong><t t-esc="match.country_id[1]"/></strong> <t t-esc="':'"/> <t t-esc="match.date"/> Equipos  <strong> <t t-esc=" ':' "/> <t t-esc="match.home_team_id[1]"/> vs <t t-esc="match.away_team_id[1]"/></strong>
                                    </button>
                                </h2>

                                <div
                                    t-att-id="'collapse_' + match.fixture_id"
                                    class="accordion-collapse collapse"
                                    t-att-data-bs-parent="'#accordionMatches'"
                                >
                                    <div class="accordion-body">
                                        <div class="d-flex justify-content-between align-items-center mb-3 text-muted" style="font-family: 'Roboto', sans-serif; font-size: 14px;">
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-calendar-event"></i>
                                                <span class="ml-2"><t t-esc="match.date"/></span>
                                            </div>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-geo-alt"></i>
                                                <span class="ml-2"><t t-esc="match.country_id[1]"/></span>
                                            </div>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-trophy"></i>
                                                <span class="ml-2"><t t-esc="match.league_id[1]"/></span>
                                            </div>
                                        </div>

                                        <!-- Results Section -->
                                        <t t-if="state.resultHome.length || state.resultAway.length">
                                            <div class="match-results mt-3">
                                                <h5 style="font-family: 'Poppins', sans-serif;">Clasificación:</h5>
                                                <table class="table table-bordered table-striped">
                                                    <thead class="table-light">
                                                        <tr>
                                                            <th>Equipo</th>
                                                            <th>Posición</th>
                                                            <th>Puntos</th>
                                                            <th>Jugados</th>
                                                            <th>Ganados</th>
                                                            <th>Empatados</th>
                                                            <th>Perdidos</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td><strong>Local</strong></td>
                                                            <td><t t-esc="state.resultHome[0] ? state.resultHome[0].rank : 'No disponible'"/></td>
                                                            <td><t t-esc="state.resultHome[0] ? state.resultHome[0].points : 'No disponible'"/></td>
                                                            <td><t t-esc="state.resultHome[0] ? state.resultHome[0].played : 'No disponible'"/></td>
                                                            <td><t t-esc="state.resultHome[0] ? state.resultHome[0].win : 'No disponible'"/></td>
                                                            <td><t t-esc="state.resultHome[0] ? state.resultHome[0].draw : 'No disponible'"/></td>
                                                            <td><t t-esc="state.resultHome[0] ? state.resultHome[0].lose : 'No disponible'"/></td>
                                                        </tr>
                                                        <tr>
                                                            <td><strong>Visitante</strong></td>
                                                            <td><t t-esc="state.resultAway[0] ? state.resultAway[0].rank : 'No disponible'"/></td>
                                                            <td><t t-esc="state.resultAway[0] ? state.resultAway[0].points : 'No disponible'"/></td>
                                                            <td><t t-esc="state.resultAway[0] ? state.resultAway[0].played : 'No disponible'"/></td>
                                                            <td><t t-esc="state.resultAway[0] ? state.resultAway[0].win : 'No disponible'"/></td>
                                                            <td><t t-esc="state.resultAway[0] ? state.resultAway[0].draw : 'No disponible'"/></td>
                                                            <td><t t-esc="state.resultAway[0] ? state.resultAway[0].lose : 'No disponible'"/></td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>

                </div>
            </Layout>
        </div>
    </t>
</template>